{% extends "base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto pt-40">
        <h1 class="text-6xl text-center pb-12">
            Edit Movie
        </h1>
        <div class="my-8">
            <a href="/movies" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                All movies
            </a>
        </div>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg font-extra bold py-4 px-8 rounded-3xl">
            Edit movie
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}